{
    "manifest_version": 3,
    "name": "Buzzword Buster",
    "version": "0.1",
    "description": "Detects buzzwords on web pages.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  
  