{
    "manifest_version": 3,
    "name": "Authentic Dashboard",
    "version": "1.0",
    "description": "Reclaim control of your social media experience",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "notifications",
      "webNavigation"
    ],
    "host_permissions": [
      "*://*.instagram.com/*",
      "*://*.facebook.com/*",
      "*://*.linkedin.com/*",
      "http://localhost:8000/*",
      "http://127.0.0.1:8000/*",
      "http://0.0.0.0:8000/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*.instagram.com/*",
          "*://*.facebook.com/*",
          "*://*.linkedin.com/*"
        ],
        "js": ["api_client.js", "content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "web_accessible_resources": [
      {
        "resources": ["api_client.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  
  